/*fixed-cur-user-info*/

.fixed-my-container {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100%;
  height: 120rpx;
  flex-flow: row nowrap;
  align-items: center;
  padding: 16rpx 40rpx;
  box-sizing: border-box;
  border-top: 2rpx solid #c1c1c1;
  background-color: #fff;
}

.fixed-my-index {
  font-size: 32rpx;
  color: #1ecfa7;
}

.fixed-my-portrait {
  flex-shrink: 0;
  margin-left: 56rpx;
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid #1ecfa7;
  border-radius: 50%;
  background-color: silver;
}

.fixed-my-info {
  margin-left: 20rpx;
  display: flex;
  flex-flow: column nowrap;
}

.fixed-my-info-pos {
  font-size: 32rpx;
  color: #1ecfa7;
}

.fixed-my-info-beat {
  font-size: 24rpx;
  color: #666;
}

.fixed-my-flowernum {
  position: absolute;
  font-size: 36rpx;
  line-height: 80rpx;
  color: #1ecfa7;
  right: 64rpx;
}

