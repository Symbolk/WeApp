.flower_container {
  background: #e0565b;
  padding: 0 16rpx 136rpx 16rpx;
}

.flower-header-bg {
  position: relative;
  display: block;
  width: 750rpx;
  height: 200rpx;
}

.flower-list-content {
  position: relative;
  width: 100%;
  background-color: #fff;
}

/* flower-list-content */

.flower-list-content {
  border-radius: 28rpx;
}

.top3-list {
  position: relative;
  width: 100%;
  /* height: 100%; */
  border-bottom: 4rpx solid #f6f6f6;
  box-sizing: border-box;
}

.top-1 {
  position: relative;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
  top: -40rpx;
  width: 240rpx;
  padding: 24rpx 40rpx 0 40rpx;
  background-color: #fff;
  box-sizing: border-box;
  margin: 0 auto;
  border-radius: 28rpx 28rpx 0 0;
  box-shadow: 0 -20rpx 20rpx rgba(0, 0, 0, 0.1);
}

/*第一名*/

.user-portrait-1 {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #1ecfa7;
  margin-top: 50rpx;
}

.user-rank-icon {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 60rpx;
  height: 60rpx;
}

.user-name-1 {
  font-size: 32rpx;
  height: 42rpx;
  text-align: center;
  overflow: hidden;
}

.user-flowers-1 {
  font-size: 24rpx;
  height: 32rpx;
  color: #666;
}

.user-flowernum-1 {
  font-size: 36rpx;
  color: #ff7500;
}

/* 第二名 */

.top-2 {
  position: absolute;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
  top: 0;
  left: 0;
  width: 240rpx;
  padding: 20rpx 60rpx;
  box-sizing: border-box;
}

.user-portrait-2 {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #1ecfa7;
}

/* 第三名 */

.top-3 {
  position: absolute;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
  top: 0;
  right: 0;
  width: 240rpx;
  padding: 20rpx 60rpx;
  box-sizing: border-box;
}

.user-portrait-3 {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #1ecfa7;
}

/*main-rank-list*/

.main-rank-list {
  position: relative;
  padding-bottom: 24rpx;
}

.rank-item {
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  padding: 18rpx 60rpx;
  height: 116rpx;
  box-sizing: border-box;
  border-bottom: 4rpx solid #f6f6f6;
}

.rank-item-pos {
  font-size: 32rpx;
  width: 56rpx;
}

.rank-item-portrait {
  flex-shrink: 0;
  margin-left: 40rpx;
  width: 80rpx;
  height: 80rpx;
  /* border-radius: 50%; */
  background-color: #1ecfa7;
  border-style: solid;
  border-width: 2rpx;
  border-color: #ff4040;
}

.rank-item-info {
  margin-left: 20rpx;
  display: flex;
  flex-flow: column nowrap;
}

.rank-item-info-name, .picker {
  font-size: 28rpx;
}

.rank-item-flowernum {
  font-size: 32rpx;
  height: 28rpx;
  color: #FF4040;
}

