.flower_container {
  background-image: url('http://ww3.sinaimg.cn/large/0060lm7Tly1fo3ip2fntcj30bi0kfwgg.jpg');
  background-repeat: round;
  padding: 0 20rpx 20rpx 20rpx;
}
.flower-header-bg {
  position: relative;
  display: block;
  width: 750rpx;
  height: 50rpx;
}

.flower-list-content {
  position: relative;
  width: 100%;
  height: 100%; 
  display: flex;
  flex-direction: column;  
   text-align: center; 
   justify-content: center;    
  background-color: #fff; 
  border-radius: 28rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border-style: solid;
  border-width: 8rpx;
  border-color: #fff;
  align-self: center;
}

.msg{
  color: #C2C2C2;
}