/* pages/whinfo/whinfo.wxss */

.flower_container {
  background: linear-gradient(#e0565b, #000);
  padding: 0 16rpx 136rpx 16rpx;
}
.flower-header-bg {
  position: relative;
  display: block;
  width: 750rpx;
  height: 50rpx;
}

.flower-list-content {
  position: relative;
  width: 100%;
  padding-bottom: 100rpx; 
  display: block;
    /* flex-direction: column;  */
  text-align: center;
  justify-content: center;   
  background-color: #fff; 
  border-radius: 28rpx;
}

.item-portrait {
  flex-shrink: 0; 
  margin-left: 100rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx; 
  background-color: #C9C9C9;
  border-style: solid;
  border-width: 5rpx;
  border-color: #CCCCCC;
}

.title{ 
  margin-top: 10rpx;
}

.input {
  /* width: 250px; */
  margin: 25rpx 20rpx 25rpx 20rpx;
  height: 30px;
  border: 1px solid lightgray;
  border-radius: 25px;
}

.uploadAvatar{
  display: flex;
  flex-direction: row;   
  align-items: center;
  justify-content: center;
}

.upload_btn{
   width: 400rpx; 
   /* height: 400rpx;  */
  margin: 100rpx 50rpx 100rpx 50rpx ;
}

.WHName{
  display: flex;
  flex-direction: column;   
  align-items: center;
  justify-content: center;
}

.works{
  display: flex;
  flex-direction: column;   
  /* align-items: center; */
  justify-content: center;
}

.work{
  display: flex;
  flex-direction: row;   
  align-items: center;
}

.addLink_btn{
  width: 50rpx;
  height: 50rpx;
  border: none;
   /* height: 400rpx;  */
  margin-left: 20rpx;
}

.input_work{
  width: 550rpx;
  margin: 25rpx 20rpx 25rpx 20rpx;
  height: 30px;
  border: 1px solid lightgray;
  border-radius: 25px;
}

.submit_btn{
 margin: 50rpx 16rpx 50rpx 16rpx;
}